<%- include('./partials/header') %>

<a href="/magazzini">
    <button type="button"
            class="mb-2 inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-gray-700 bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
        ‚Üê Indietro
    </button>
</a>
<div>
    <h3 class="text-lg leading-6 text-gray-900">
        Dettaglio
        <span class="font-medium"> <%= wh.name; %></span>
    </h3>
    <p class="mt-1 text-sm text-gray-500">
        Salva per aggiornare il magazzino
    </p>
</div>

<form action="<%= wh._id; %>/elimina" method="POST" id="delete-form"></form>
<form action="/magazzini/<%= wh._id %>" method="POST">
    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-4">
            <label for="name" class="block text-sm font-medium text-gray-700">
                Nome
            </label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input type="text" name="name" id="name"
                       required
                       value="<%= wh.name %>"
                       class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full min-w-0 rounded-md sm:text-sm border-gray-300">
            </div>
        </div>

        <div class="sm:col-span-6">
            <label for="desc" class="block text-sm font-medium text-gray-700">
                Descrizione
            </label>
            <div class="mt-1">
            <textarea id="desc" name="desc" rows="3"
                      required
                      class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"><%= wh.desc %>
            </textarea>
            </div>
            <p class="mt-2 text-sm text-gray-500">
                Una breve descrizione del magazzino e delle sue funzioni
            </p>
        </div>
        <div class="sm:col-span-4">
            <label for="address"
                   class="block text-sm font-medium text-gray-700">
                Indirizzo
            </label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <input type="text"
                       name="address"
                       id="address"
                       autocomplete="address"
                       required
                       value="<%= wh.address %>"
                       class="flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full min-w-0 rounded-md sm:text-sm border-gray-300">
            </div>
        </div>
    </div>


    <div class="pt-5">
        <div class="flex justify-end">

            <a href="/magazzini">
                <button type="button"
                        class="ml-3 bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Annulla
                </button>
            </a>
            <button
                    form="delete-form"
                    type="submit"
                    class="ml-3 bg-white py-2 px-4 border border-red-600 rounded-md shadow-sm text-sm font-medium text-red-600 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Elimina
            </button>
            <button type="submit"
                    class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Aggiorna
            </button>
        </div>
    </div>
</form>


<%- include('./partials/footer') %>
